<odoo>
	<data>
		<!-- explicit list view definition -->
		<record model="ir.ui.view" id="vit_drop_dana_tree">
			<field name="name">vit_drop_dana_tree</field>
			<field name="model">drop.dana</field>
			<field name="type">tree</field>
			<field name="priority" eval="8"/>
			<field name="arch" type="xml">
				<tree string="Dropping Dana">
					<field name="name"/>
					<field name="kebutuhan"/>
					<field name="referensi"/>
					<field name="jawab"/>
					<field name="alasan"/>
					<field name="estimasi"/>
					<field name="bank_asal" domain="[('type', '=', 'bank')]"/>
					<field name="bank_tujuan" domain="[('type', '=', 'bank')]"/>
					<field name="waktu"/>
				</tree>
			</field>
		</record>

		<record model="ir.ui.view" id="vit_drop_dana_form">
			<field name="name">vit_drop_dana_form</field>
			<field name="model">drop.dana</field>
			<field name="type">form</field>
			<field name="priority" eval="8"/>
			<field name="arch" type="xml">
				<form string="Dropping Dana">
					<header>
						<button string="Request Approval" type="object" class="oe_highlight" name="action_confirm" states="draft" />
						<button string="Approve 1" type="object" class="oe_highlight" name="action_done" states="confirmed" />
						<button string="Approve 2" type="object" class="oe_highlight" name="action_draft" states="done" />
						<field name="state" widget="statusbar" />
					</header>
					<sheet>
						<div class="oe_title">
							<label for="name" class="oe_edit_only" string="No Form:"/>
							<h1><field name="name"/></h1>
						</div>
						<group>
							<field name="kebutuhan"/>
							<field name="referensi"/>
							<field name="jawab"/>
							<field name="alasan"/>
							<field name="estimasi"/>
							<field name="bank_asal" domain="[('type', '=', 'bank')]"/>
							<field name="bank_tujuan" domain="[('type', '=', 'bank')]"/>
							<field name="waktu"/>
						</group>
					</sheet>
				</form>
			</field>
		</record>

